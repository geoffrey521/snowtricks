<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Snowtricks{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="position-relative">

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top menu-desktop">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="{{ path('home') }}"><img src="{{ asset('build/images/logo3.png') }}"
                                                                   alt="logo site" width="100" height="100"></a>

            <ul class="navbar-nav mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link border-right active" aria-current="page" href="{{ path('home') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#section_tricks">Tricks</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="registration.html">Sign up</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<nav class="menu-mobile navbar fixed-bottom navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#"><i class="fas fa-home"></i></a>
        <a class="navbar-brand" href="#"><i class="fas fa-bookmark"></i></a>
        <a class="navbar-brand" href="#"><i class="fas fa-sign-in-alt"></i></a>
    </div>
</nav>
{% block body %}{% endblock %}
<footer class="bg-light text-center text-lg-start mt-5">
    <!-- Copyright -->
    <div class="p-3 text-center" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2021 Copyright:
        <a class="text-dark" href="https://geofcalvino.com/">Geoffrey Calvino</a>
    </div>
</footer>

</body>
</html>
