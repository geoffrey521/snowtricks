{% extends 'base.html.twig' %}{# https://localhost:8000/register #}

{% block title %}Register{% endblock %}

{% block body %}
    <main class="registration auth text-center">

        <div class="row d-flex justify-content-center">
            <div class="col-10 col-md-6 col-lg-4">
                {{ form_start(registrationForm) }}
                <div class="form m-auto mt-5 border p-5">
                    <h1 class="mb-3">Registration</h1>
                    {{ form_row(registrationForm.username) }}

                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <input type="submit" class="mt-3 btn-orange btn m-auto" value="Create an account">
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>


        <div class="mt-2 desktop-hidden">
            <a href="login.html">Already an account ?</a>
        </div>
    </main>

{% endblock %}
